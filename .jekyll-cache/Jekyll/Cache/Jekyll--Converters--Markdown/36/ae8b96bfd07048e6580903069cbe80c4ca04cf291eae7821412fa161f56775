<span class="kt">long</span> <span class="n">n4</span> <span class="o">=</span> <span class="mi">3000000000L</span><span class="o">;</span> <span class="c1">// n4 recebe 3000000000</span>
<span class="kt">float</span> <span class="n">f1</span> <span class="o">=</span> <span class="mf">8.7</span><span class="no">F</span><span class="o">;</span> <span class="c1">// f1 recebe 8.7</span>
<span class="kt">double</span> <span class="n">f2</span> <span class="o">=</span> <span class="mf">1000.48</span><span class="o">;</span> <span class="c1">// f2 recebe 1000.48</span>
